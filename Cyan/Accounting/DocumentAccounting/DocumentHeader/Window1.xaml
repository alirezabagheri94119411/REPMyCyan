                                <telerik:RadComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding DLCode}"></TextBlock>
                                            <TextBlock Text="{Binding Title}"  Grid.Column="1"></TextBlock>
                                        </Grid>
