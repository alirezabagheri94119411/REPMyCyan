                                        <i:InvokeCommandAction Command="{Binding DataContext.DLsDropDownOpenedCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" CommandParameter="DLType1"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>

                            </telerik:RadComboBox>
