                                             VerticalContentAlignment="Bottom"
                                             HorizontalAlignment="Left"
                                              FlowDirection="LeftToRight"
                                             TabIndex="1"
                                             Width="70" 
                                             Grid.Column="3"
                                             Grid.Row="1"
                                             Margin="7 7 0 0"  >
                    </TextBox>
